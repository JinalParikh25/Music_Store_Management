@model Music_Store_Management.ViewModels.MovieFormViewModel
@{
    ViewData["Title"] = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var title = Model.Movie.Id == 0 ? "New Movie" : "Edit Movie";
}
<h1>@title</h1>

<form asp-controller="Movies" asp-action="SubmitMovieForm" method="post">
    <div class="form-group">
        <label asp-for="@Model.Movie.Name"></label>
        <input type="text" asp-for="@Model.Movie.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Movie.ReleaseDate"></label>
        <input type="text" asp-for="@Model.Movie.ReleaseDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Movie.GenreId"></label>
        <select asp-for="@Model.Movie.GenreId" asp-items="@(new SelectList(Model.Genres,"Id","Name"))" class="form-control">
            <option>--select--</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Movie.Stock"></label>
        <input type="text" asp-for="@Model.Movie.Stock" class="form-control" />
    </div>

    <input type="hidden" asp-for="@Model.Movie.Id"/>
    <div class="form-group">
        <button class="btn btn-primary">Submit</button>
    </div>
</form>

