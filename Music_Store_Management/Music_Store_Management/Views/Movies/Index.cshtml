@model List<Music_Store_Management.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<a class="btn btn-primary" asp-controller="Movies" asp-action="NewMovie">New Movies</a>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <td>Movies</td>
            <td>Genre</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "EditMovie", "Movies", new { id = movie.Id })
                </td>
                <td>@movie.Genre.Name</td>
            </tr>

        }
    </tbody>
</table>

