@model Music_Store_Management.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Customer</h1>

<div asp-validation-summary="ModelOnly" ></div>

<form asp-controller="Customer" asp-action="SubmitForm" method="post" asp-antiforgery="true">

    <div class="form-group">
        Name: <input type="text" asp-for="@Model.Customer.Name" class="form-control" />
        <span asp-validation-for="@Model.Customer.Name"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="@Model.Customer.MembershipTypeId"></label>
        <select class="form-select" asp-for="@Model.Customer.MembershipTypeId" asp-items="@(new SelectList(Model.MembershipTypes, "Id","Name"))">
            <option value="">--select--</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Customer.BirthDate"></label>
        <input type="text" asp-for="@Model.Customer.BirthDate" class="form-control" />
        <span asp-validation-for="@Model.Customer.BirthDate"></span>
    </div>

    <div class="checkbox">
        <label>
            <input type="checkbox" asp-for="@Model.Customer.IsSubscribedToNewsletter" /> Subscribed to Newsletter?
        </label>
    </div>

    <div class="hiding">
        <input type="hidden" asp-for="@Model.Customer.Id" value="@Model.Customer.Id"/>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Submit</button>
    </div>
</form>

