@model List<Music_Store_Management.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr>Movies</tr>
        <tr>Genre</tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                @Html.ActionLink(movie.Name,"Details","Movies",new { id = movie.Id})
                </td>
                <td>@movie.Genre.Name</td>
            </tr>

        }
    </tbody>
</table>

